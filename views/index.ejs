<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body>
        <h1><%= title %></h1>
        <div class='board'>
            <div class='board-header'>
                <%= count %> total messages
                <span>
                    Last message on <%= latest.toLocaleString([], {year: 'numeric', month: 'numeric', day: 'numeric'}) %>
                </span>
            </div>
            <ul class='messages'>
                <% messages.forEach(function(message) { %>
                    <li class='message'>
                        <div class='message-user'><%= message.user %></div>
                        <div class='message-date'><%= message.createdAt.toLocaleString([], {year: 'numeric', month: 'numeric', day: 'numeric', hour: '2-digit', minute:'2-digit'}) %></div>
                        <div class='message-text'><%= message.text %></div>
                    </li>
                <% }); %>
            </ul>
            <div class='board-footer'>
                <form method="POST" action="/new">
                    <h3>New Message</h3>
                    <input type="text" name="user" placeholder="Author" maxlength="15" />
                    <input type="text" name="text" placeholder="Message" maxlength="250" />
                    <button type="submit">Submit</button>
                </form>
            </div>
        </div>
    </body>
</html>